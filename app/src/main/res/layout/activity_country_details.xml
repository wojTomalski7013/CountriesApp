<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CountryDetailsActivity">


    <fragment
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:id="@+id/map" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="457dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/map" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent">
        <TextView
                android:layout_width="381dp"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/map" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/nameTextView" android:textSize="18sp" app:layout_constraintHorizontal_bias="0.032"
                app:layout_constraintVertical_bias="0.04"/>

        <TextView
                android:layout_width="380dp"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/map" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/capitalTextView" android:textSize="18sp" app:layout_constraintHorizontal_bias="0.024"
                app:layout_constraintVertical_bias="0.279"/>

        <TextView
                android:layout_width="380dp"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/map" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/regionTextView" android:textSize="18sp" app:layout_constraintHorizontal_bias="0.024"
                app:layout_constraintVertical_bias="0.826"/>

        <TextView
                android:layout_width="380dp"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/map" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/populationTextView" android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.024"
                app:layout_constraintVertical_bias="0.547"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>